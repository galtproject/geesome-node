{
  "$schema": "https://json.schemastore.org/tsconfig",

  "_version": "18.2.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "./test/**/*",
    "./tasks/**/*",
    "./helpers/**/*",
    "./types/**/*",
    "./node_modules/geesome-libs/src/**/*"
  ]
}

